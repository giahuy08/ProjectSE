<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellowbackground"
    tools:context=".tracnghiem.QuizActivity">


    <TextView
        android:id="@+id/txtscore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_margin="20dp"></TextView>

    <TextView
        android:id="@+id/txtquestcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question: 1/x"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_below="@+id/txtscore"
        android:layout_marginLeft="20dp"></TextView>

    <ImageButton
        android:id="@+id/ImgBT"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/txtquestcount"
        android:layout_toRightOf="@+id/txtquestcount"
        android:layout_weight="2"
        android:background="@drawable/volumn"
        android:gravity="center"
        android:textAlignment="center"></ImageButton>

    <ImageView
            android:id="@+id/imgHinh"
            android:layout_below="@id/ImgBT"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="4"
            android:gravity="center"
            android:src="@drawable/cloud"></ImageView>
    <RadioGroup
        android:layout_marginTop="25dp"
        android:layout_below="@id/imgHinh"
        android:id="@+id/radiochoices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:layout_marginLeft="30dp"
            android:id="@+id/op1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option 1"
            android:textColor="@color/black"
            android:textSize="20sp"></RadioButton>
        <RadioButton
            android:layout_marginLeft="30dp"
            android:id="@+id/op2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option 2"
            android:textColor="@color/black"
            android:textSize="20sp"></RadioButton>
        <RadioButton
            android:layout_marginLeft="30dp"
            android:id="@+id/op3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option 3"
            android:textColor="@color/black"
            android:textSize="20sp"></RadioButton>
        <RadioButton
            android:layout_marginLeft="30dp"
            android:id="@+id/op4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Option 4"
            android:textColor="@color/black"
            android:textSize="20sp"></RadioButton>
    </RadioGroup>
    <Button

        android:id="@+id/btnconfirm"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Confirm"
        android:layout_below="@id/radiochoices"></Button>
</RelativeLayout>