<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellowbackground"
    tools:context=".dienkhuyet.FinishDKActivity">

    <ImageView
        android:id="@+id/imgtrophyDK"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_trophy"
        android:layout_centerHorizontal="true"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/txtcongratsDK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congratulaton!"
        android:fontFamily="@font/fredokaoneregular"
        android:textSize="45sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imgtrophyDK"
        android:textColor="@color/black"></TextView>

    <TextView
        android:id="@+id/textquestioncountDK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/fredokaoneregular"
        android:text="CORRECT ANSWERS"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_below="@id/txtcongratsDK" />

    <TextView
        android:id="@+id/txtquestiontrueDK"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredokaoneregular"
        android:text="6/6"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textquestioncountDK"></TextView>


    <TextView
        android:id="@+id/tvRPDK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/fredokaoneregular"
        android:text="Reward Points"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:layout_below="@id/txtquestiontrueDK"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tvPointsDK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_dollar"
        android:drawablePadding="10dp"
        android:fontFamily="@font/fredokaoneregular"
        android:text="500"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvRPDK" />

    <TextView
        android:id="@+id/txtfinaltextDK"
        android:layout_marginTop="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Perfect Attemp!!"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@id/tvPointsDK"
        android:fontFamily="@font/fredokaoneregular"
        android:textColor="@color/black"
        ></TextView>
    <Button
        android:id="@+id/btnReturnDK"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return"
        android:textSize="30sp"
        android:fontFamily="@font/fredokaoneregular"
        android:layout_below="@id/txtfinaltextDK"
        android:layout_centerHorizontal="true"></Button>
</RelativeLayout>